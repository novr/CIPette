# CIPette Environment Variables
# Copy this file to .env and update the values

# =============================================================================
# SENSITIVE INFORMATION (Required)
# =============================================================================

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow
GITHUB_TOKEN=ghp_your_token_here

# =============================================================================
# OPTIONAL OVERRIDES (Non-sensitive)
# =============================================================================

# Target repositories (comma-separated)
# Format: owner/repo1,owner/repo2
# Default: See config.toml [repositories] section
TARGET_REPOSITORIES=owner/repo1,owner/repo2

# Data collection settings
# Default: See config.toml [data_collection] section
MAX_WORKFLOW_RUNS=10
MTTR_REFRESH_INTERVAL=300

# Flask Configuration
# Default: See config.toml [web] section
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000